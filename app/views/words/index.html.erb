
<% provide(:title, 'All words') %>
<h1>All words</h1>
<div class="row">
  <form class="form-inline col-md-8 col-md-offset-4">
    <div class="form-group">
      <label for="category-id">Category</label><br>
      <select class="form-control" id="category-id">
        <% @categories.each do |category| %>
        <option value="<%= category.id %>"><%= category.name %></option>
        <% end %>
      </select>
    </div>
    <div class="form-group">
      <label>
        <input type="radio" class="form-control" name="blankRadio" id="blankRadio1" value="option1" aria-label="...">
        learned
      </label>
    </div>
    <div class="form-group">
      <label>
        <input type="radio" class="form-control" name="blankRadio" id="blankRadio1" value="option1" aria-label="...">
        not learned
      </label>
    </div>
    <div class="form-group">
      <label>
        <input type="radio" class="form-control" name="blankRadio" id="blankRadio1" value="option1" aria-label="...">
        All
      </label>
    </div>
  </form>
  <button class="btn btn-primary col-md-offset-4">Filter</button>
  <div class="col-md-10 col-md-offset-2">
    <%= render @words %>
  </div>
</div>