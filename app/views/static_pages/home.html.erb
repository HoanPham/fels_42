<% provide(:title, "Home") %>
<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-8">
      <button type="button" class="btn btn-default list-words">Words</button>
      <%= link_to "Lessons", categories_path, class: "btn btn-default list-lessons" %>
      <h3>Activities</h3><hr>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to Fram gia E-learning system</h1>
    <h2>
      This is the home page for the
      <a href="http://www.framgia.vn/">Framgia</a>
      E-learning system.
    </h2>
    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo"), 'http://rubyonrails.org/' %>
<% end %>