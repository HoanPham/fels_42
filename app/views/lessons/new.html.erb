<% provide(:title, 'Lesson Wordspace') %>
<div class="row">
  <div class="col-md-5 col-md-offset-2 category-title">
    <%= @category.name %> 
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-3">
    <%= form_for [@category, @lesson] do |f| %>
      <%= f.fields_for :lesson_words do |record| %>
        <%= render 'record', :f => record %>
      <% end %>
      <%= f.submit "Submit result", class: "btn btn-primary btn-small col-md-2 col-md-offset-4 btn-submit" %>
    <% end %>
    <div class="col-md-2 col-md-offset-4 button-next">
      <button class="btn btn-success btn-block btn-next" data-current-question="0">Next</button>
    </div>
  </div>
</div>