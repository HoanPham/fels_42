<% provide(:title, 'Lesson Wordspace') %>
<div class="row">
  <div class="col-md-5 col-md-offset-2 category-title">
    <%= @category.name %> 
  </div>
</div>
<div class="row">
  <% @words.each do |word| %>
  <div class="col-md-10 col-md-offset-3 word-layout" id="<%= word.id %>">
    <div class="col-md-4">
      <%= word.content %>
    </div>
    <div class="col-md-6">
      <div class="btn-group" data-toggle="buttons">
      <% word.answers.each do |answer| %>
        <label class="btn btn-primary">
          <input type="radio" autocomplete="off"> <%= answer.content %>
        </label><br>
      <% end %>
      </div>
    </div>  
  </div>
  <% end %>
  <div class="col-md-2 col-md-offset-4 button-next">
    <button class="btn btn-success btn-block">Next</button>
  </div>
</div>